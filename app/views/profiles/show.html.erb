<h1>Welcome to Your Profile, <%= @user.id %></h1>
<p>Email: <%= @user.email %></p>
<% if @user.admin? %>
  <p><b>Admin: Yes</b></p>
<% end %>

<h3>Articles:</h3>
<ul>
  <% @user.articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %> (<%= article.status %>) <%= link_to "Edit", edit_article_path(article) %>
    </li>
  <% end %>
</ul>