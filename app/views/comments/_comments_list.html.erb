<%= turbo_frame_tag 'comments-list' do %>
  <% comments.each do |comment| %>
    <% if !comment.archived? %>
      <%= render 'comments/comment', comment:comment %>
    <% elsif current_user and current_user.admin %>
      <%= render 'comments/comment', comment:comment %>
    <% end %>
  <% end %>
<% end %>