<%= render 'shared/errors', obj: @article %>


<%= turbo_frame_tag 'comment-form' do %>

    <%= form_for([ @article, @article.comments.build ], :html => {class: "form-horizontal", role: "form"}, remote: true  ) do |form| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
     <%= form.label :commenter %><br>
    </div>
    <div class="col-sm-5">
      <%= form.text_field :commenter, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :body %><br>
    </div>
    <div class="col-sm-5">
      <%= form.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :status %><br>
    </div>
    <div class="col-sm-5">
      <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: 'btn btn-primary btn-large' %>
    </div>
  </div>
<% end %>
<% end %>