<h2 class="text-center"><%= @page.page_name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <p><%= simple_format(@page.page_text) %></p>
  <p>
    <% if current_user %>
      <%= link_to "Change view", change_navbar_display_page_path(@page), method: :put, class: "btn btn-xs btn-info" %>
      <%= link_to "Edit", edit_page_path(@page), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete", page_path(@page), method: :delete, data: { confirm: "Are you sure you want to delete this page?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
  </p>
</div>