<%= render 'shared/errors', obj: @page %>
<%= form_for(@page, :html => {class: "form-horizontal", role: "form"}) do |form| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :page_name %>
    </div>
    <div class="col-sm-6">
      <%= form.text_field :page_name, class: "form-control", placeholder: "Name of page", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :page_text %>
    </div>
    <div class="col-sm-6">
      <%= form.text_area :page_text, rows: 10, class: "form-control", placeholder: "Text of page" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :navbar_display %>
    </div>
    <div class="col-sm-6">
      <%= form.check_box :navbar_display, prompt: "Select Navbar", class: "form-control checkbox" %>
    </div>
<!--    <div class="col-sm-6">-->
      <%#= select_tag(:status, options_for_select(['public', 'private', 'archived'], params[:status]), prompt: "Select Status", class: "form-control") %>
<!--    </div>-->
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: 'btn btn-primary btn-large' %>
    </div>
  </div>



<% end %>