
<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <div class="article-body">
    <% images_data = [] %>
    <% @article.images.each do |image| %>
      <%#= image_tag(image, class: "img-fluid", width: '100%')  %>
      <% images_data.push(image_tag(image, class: "img-fluid", width: '100%')) %>
    <% end %>
  </div>

  <h4 class="center"><strong>Description:</strong></h4>
  <hr>
<!--<p><%#= markdown(@article.body) %></p>-->
<!--  <h2>PREPARE article</h2>-->
  <p><%= prepare_article(@article.body, images_data) %></p>

<p>Status: <%= @article.status %></p>
  <p>User: <%= @article.user.email unless @article.user.nil? %></p>


<%# if can? :edit, @article %>
  <% if current_user == @article.user %>
  <ul>
    <li><%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %></li>
    <li>
      <%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </li>
  </ul>
<% else %>
  <li>You don't have rights for edit or destroy it</li>
<% end %>
  <%= link_to 'Back', articles_path, class: "btn btn-xs btn-success" %>

</div>
<div class="well col-xs-8 col-xs-offset-2">
  <div class="well col-xs-8 col-xs-offset-2">
    <h2>Comments</h2>
    <%= turbo_frame_tag 'comments-list' do %>
      <%= render partial: 'comments/comments_list', locals: { comments: @article.comments } %>

      <%#= render @article.comments %>
    <% end %>
  </div>

  <br>
  <div class="col-xs-10 col-xs-offset-2">
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
  </div>
</div>
